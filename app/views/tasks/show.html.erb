<div class="container">
  <h2 class="title-lg mb">Задача: <%= @task.id %></h2>

  <%= render 'task', task: @task %>

  <%= form_with(model: [ @task, @task.comments.build ]) do |form| %>
    <p>
      <%= form.label :content, "Новый комментарий" %><br>
      <%= form.text_area :content %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>

 
  <% @task.comments.each do |comment| %>
    <% if comment.present? %>
    <p>
      <%= comment.content %>
      <% if comment.id.present? %>
      <%= link_to 'Редактировать', edit_task_comment_path(@task, comment) %> |
      <%= link_to 'Удалить', task_comment_path(@task, comment), method: :delete, data: { confirm: 'Вы уверены?' } %>
    </p>
    <% end %>
    <% end %>
  <% end %>

  <p class="mt"><%= link_to "Все задачи", tasks_path %></p>
  </div>
