<div class="container">
    <h2 class ="title">Зарегистрируйтесь!</h2>

    <div class="mt">
      <%= form_with model: @user do |form| %>
         <p><%= form.label :username, "Ваше имя" %></p>
         <p><%= form.text_field :username, class: "form-text-field" %></p>

         <p class="mt"><%= form.label :email %></p>
         <p><%= form.text_field :email, class: "form-text-field" %></p>

         <p class="mt"><%= form.label :password, "Пароль" %></p>
         <p><%= form.password_field :password, class: "form-text-field" %></p>

         <p class="mt-lg"><%= form.submit 'Зарегистрироваться', class: "button button-main" %></p>
        <% end %>

    </div>

</div>